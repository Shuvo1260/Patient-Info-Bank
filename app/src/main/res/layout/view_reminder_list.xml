<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/_15sdp"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="@dimen/_15sdp">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingBottom="@dimen/_5sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Napa" />

    <TextView
        android:id="@+id/startDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/startTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/startDateTitle"
        app:layout_constraintStart_toEndOf="@+id/startDateTitle"
        app:layout_constraintTop_toTopOf="@id/startDateTitle"
        tools:text="19/05/2020" />

    <TextView
        android:id="@+id/endDateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/endTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/startDate"
        app:layout_constraintStart_toEndOf="@id/startDate"
        app:layout_constraintTop_toTopOf="@+id/startDate" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/endDateTitle"
        app:layout_constraintStart_toEndOf="@+id/endDateTitle"
        app:layout_constraintTop_toTopOf="@id/endDateTitle"
        tools:text="19/05/2020" />

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:text="@string/time"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/endDate"
        app:layout_constraintStart_toEndOf="@+id/endDate"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/timeTitle"
        app:layout_constraintStart_toEndOf="@+id/timeTitle"
        app:layout_constraintTop_toTopOf="@id/timeTitle"
        tools:text="00:00 " />

    <TextView
        android:id="@+id/intervalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:text="@string/intervalTitle"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/time"
        app:layout_constraintStart_toEndOf="@+id/time"
        app:layout_constraintTop_toTopOf="@+id/time" />

    <TextView
        android:id="@+id/interval"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mtcorsva"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_2sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@id/intervalTitle"
        app:layout_constraintEnd_toStartOf="@+id/deleteButton"
        app:layout_constraintStart_toEndOf="@+id/intervalTitle"
        app:layout_constraintTop_toTopOf="@id/intervalTitle"
        tools:text="5" />


    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_delete"
        app:layout_constraintBottom_toBottomOf="@+id/startDateTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>